@section styles{
    <style type="text/css">
        .glyphicon {
            font-size: 26px;
        }

        .user-menu {
            font-size: 26px;
        }
    </style>
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            function load_unseen_notification() {
                $.ajax({
                    url: "../../Professional/Orders/GetNotification",
                    method: "GET",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        $('#dropdownid').html(data.Notification);
                        if (data.count > 0) {
                            $('.count').html(data.count);
                        }
                    }
                });
            }

            //$(document).on('click', '#dropdownid', function () {
            //    $('.count').html('');
            //    //load_unseen_notification('yes');
            //});

            setInterval(function () {
                load_unseen_notification();
            }, 10000);
        });

    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            function load_unseen_notificationdata() {
                $.ajax({
                    url: "../../Professional/Home/GetNotificationLoad",
                    method: "GET",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        $('#dropdownid').html(data.Notification);
                        if (data.count > 0) {
                            $('.count').html(data.count);
                        }
                    }
                });
            }

            
                load_unseen_notificationdata();
            
        });

    </script>

}