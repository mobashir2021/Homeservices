@section Scripts{
    <script>
        $(document).ready(function () {
            $('#ongoingorder').DataTable({
                "ajax": {
                    "url": "/Home/OrdersJson",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "SNo", "width": "70px" },
                    { "data": "Service", "width": "170px" },
                    { "data": "Amount", "width": "150px" },
                    { "data": "PlacedOn", "width": "170px" },
                    { "data": "Area", "width": "100px" },
                    { "data": "Status", "width": "120px" },
                    { "data": "Remarks", "width": "120px" },
                    {
                        "data": "StatusValue", "width": "150px", "render": function (data) {
                            var splittedarray = data.split('--');
                            if (splittedarray[0] == "Accepted") {
                                return '<a class="popup" href="/Home/ProfessionalDetails/' + splittedarray[1] + '">See Professional Details</a>';
                            } else if (splittedarray[0] == "Completed" && splittedarray[2] == "Done") {
                                return '<a class="popup" href="/Home/ProfessionalDetails/' + splittedarray[1] + '">View PartnerDetails</a> | <a href="/Home/ProvideComment/' + splittedarray[1] + '">View Feedback</a>';
                            } else if (splittedarray[0] == "Completed") {
                                return '<a class="popup" href="/Home/ProfessionalDetails/' + splittedarray[1] + '">View PartnerDetails</a> | <a href="/Home/ProvideComment/' + splittedarray[1] + '">Provide Feedback</a>';
                            } else if (splittedarray[0] == "See Requests") {
                                return '<a class="popup" href="/Home/OrderRequests/' + splittedarray[1] + '">See All Requests</a>';
                            }else if (splittedarray[0] == "Waiting for Approval from Professional" || splittedarray[0] == "Cancelled") {
                                return '<a class="popup" href="/Home/WaitingForApprovalProf/' + splittedarray[1] + '">See Details</a>';
                            } else {
                                return splittedarray[0];
                            }
                            return '<a class="popup" href="/Home/OrderRequests/' + data + '">Details</a>';
                        }
                    }


                    //{
                    //    "data": "OrderId", "width": "150px", "render": function (data) {
                    //        return '<a class="popup" href="../../Professional/Orders/Details/'+ data +'">Details</a>';
                    //    }
                    //}
                    //{
                    //    "data": "OrderId", "width": "50px", "render": function (data) {
                    //        return '<a class="popup" href="/Orders/ChangeStatus/'+data+'">Change Status</a>';
                    //    }
                    //},
                ]
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            function load_unseen_notification() {
                $.ajax({
                    url: "/Home/GetNotification",
                    method: "GET",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        $('#dropdownid').html(data.Notification);
                        if (data.count > 0) {
                            $('.count').html(data.count);
                        }
                    }
                });
            }

            //$(document).on('click', '#dropdownid', function () {
            //    $('.count').html('');
            //    //load_unseen_notification('yes');
            //});

            setInterval(function () {
                load_unseen_notification();
            }, 10000);
        });

    </script>


