@model IEnumerable<OnDemandService.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>View Orders</h2>
<hr/>

<p>
